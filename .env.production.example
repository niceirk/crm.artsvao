# Database Configuration
DB_USER=artsvao_user
DB_PASSWORD=your_secure_password_here
DB_NAME=artsvao_db
DB_HOST=postgres
DB_PORT=5432

# Database URL for Prisma (PostgreSQL connection string)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_use_openssl_rand_base64_32
JWT_REFRESH_SECRET=your_refresh_secret_here_use_openssl_rand_base64_32
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Frontend API URL
NEXT_PUBLIC_API_URL=https://crm.artsvao.ru/api

# Node Environment
NODE_ENV=production

# Email Configuration (SMTP) - REQUIRED
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=notifications@example.com
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=Your Company <notifications@example.com>
FRONTEND_URL=https://your-domain.com

# Pyrus CRM Integration (OPTIONAL)
PYRUS_LOGIN=your-email@example.com
PYRUS_SECURITY_KEY=your_pyrus_security_key_here
PYRUS_FORM_ID=your_form_id

# YooKassa Payment Integration (OPTIONAL)
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=
