# Database Configuration
DB_USER=artsvao_user
DB_PASSWORD=your_secure_password_here
DB_NAME=artsvao_db
DB_HOST=postgres
DB_PORT=5432

# Database URL for Prisma (PostgreSQL connection string)
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_use_openssl_rand_base64_32
JWT_REFRESH_SECRET=your_refresh_secret_here_use_openssl_rand_base64_32
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Frontend API URL
NEXT_PUBLIC_API_URL=https://crm.artsvao.ru/api

# Node Environment
NODE_ENV=production
