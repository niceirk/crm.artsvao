  invoice   Invoice            @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  user      User               @relation("InvoiceAudit", fields: [userId], references: [id])

  @@index([invoiceId])
  @@index([userId])
  @@index([createdAt])
  @@index([action])
  @@map("invoice_audit_logs")
}

