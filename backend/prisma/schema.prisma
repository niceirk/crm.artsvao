model Notification {
  id               String                 @id @default(uuid())
  recipientId      String?                @map("recipient_id")
  channel          NotificationChannel
  recipientAddress String                 @map("recipient_address")
  eventType        NotificationEventType  @map("event_type")
  templateId       String?                @map("template_id")
  payload          Json?                  @map("payload_json")
  status           NotificationStatus     @default(PENDING)
  attempts         Int                    @default(0)
  maxAttempts      Int                    @default(5) @map("max_attempts")
  lastError        String?                @map("last_error") @db.Text
  externalId       String?                @map("external_id")
  initiator        NotificationInitiator  @default(SYSTEM)
  initiatorId      String?                @map("initiator_id")
  scheduledFor     DateTime?              @map("scheduled_for")
  sentAt           DateTime?              @map("sent_at")
  nextRetryAt      DateTime?              @map("next_retry_at")
  createdAt        DateTime               @default(now()) @map("created_at")
  updatedAt        DateTime               @updatedAt @map("updated_at")

  recipient        Client?                @relation(fields: [recipientId], references: [id], onDelete: SetNull)
  template         NotificationTemplateV2? @relation(fields: [templateId], references: [id])

  @@index([status])
  @@index([status, nextRetryAt])
  @@index([channel])
  @@index([eventType])
  @@index([recipientId])
  @@index([scheduledFor])
  @@index([createdAt])
  @@map("notifications")
}

