# Database Configuration
# PostgreSQL connection string for Cultural Center Management System

# Main database URL (with SSL certificate)
DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=verify-full&sslrootcert=/path/to/root.crt"

# Direct database URL (for migrations, without connection pooling)
DIRECT_DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=verify-full&sslrootcert=/path/to/root.crt"

# Database credentials (for reference)
DB_HOST="your-db-host"
DB_PORT="5432"
DB_NAME="your-database-name"
DB_USER="your-username"
DB_PASSWORD="your-password"

# SSL Certificate path
PGSSLROOTCERT="/path/to/ssl/root.crt"

# Node environment
NODE_ENV="development"

# JWT Secret (generate a secure random string for production)
# Use: openssl rand -base64 32
JWT_SECRET="your-secret-key-change-this-in-production"

# API URL
API_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000"

# YooKassa (ЮКасса) Payment Integration
# Получите эти данные в личном кабинете ЮКасса: https://yookassa.ru/
YOOKASSA_SHOP_ID="your-shop-id"
YOOKASSA_SECRET_KEY="your-secret-key"

# Pyrus CRM Integration
# Получите Security Key в профиле Pyrus → Authorization
# FORM_ID - это числовой ID формы из URL (например, из https://pyrus.com/t#rg1022196 берем 1022196)
PYRUS_LOGIN="your-email@example.com"
PYRUS_SECURITY_KEY="your-security-key"
PYRUS_FORM_ID="1022196"

# Email Configuration (SMTP)
# Используется для отправки уведомлений и восстановления паролей
SMTP_HOST="smtp.timeweb.ru"
SMTP_PORT="465"
SMTP_SECURE="true"
SMTP_USER="notification@artsvao.ru"
SMTP_PASSWORD="your-email-password"
EMAIL_FROM="ArtsVAO <notification@artsvao.ru>"
FRONTEND_URL="http://localhost:3001"

# Telegram Bot Integration
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
TELEGRAM_WEBHOOK_URL="https://crm.artsvao.ru/api/telegram/webhook"

# AWS S3 Storage Configuration
# Используется для хранения изображений в сообщениях
# Можно использовать AWS S3 или совместимые сервисы (DigitalOcean Spaces, MinIO и т.д.)
AWS_S3_BUCKET_NAME="your-bucket-name"
AWS_S3_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"
# Опционально: для совместимых с S3 хранилищ (например, DigitalOcean Spaces)
# AWS_S3_ENDPOINT="https://your-region.digitaloceanspaces.com"

# Notification Queue Worker
# Включает фоновый воркер для отправки уведомлений
# ВАЖНО: При нескольких инстансах бэкенда включать только на одном!
NOTIFICATION_WORKER_ENABLED="true"
